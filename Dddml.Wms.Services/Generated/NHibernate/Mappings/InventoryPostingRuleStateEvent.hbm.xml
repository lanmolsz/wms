<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   assembly="Dddml.Wms.Common" 
                   namespace="Dddml.Wms.Domain.InventoryPostingRule">
  
  <class name="InventoryPostingRuleStateEventBase" table="InventoryPostingRuleStateEvents" mutable="false" abstract="true">

    <composite-id name="StateEventId" class="Dddml.Wms.Domain.InventoryPostingRule.InventoryPostingRuleStateEventId">
        <key-property name="InventoryPostingRuleId" ><column name="InventoryPostingRuleId" length="50" /></key-property>
        <key-property name="Version" ></key-property>
    </composite-id>
    <discriminator column="StateEventType" type="String" />

    <component name="Trigger" class="Dddml.Wms.Domain.InventoryItem.InventoryItemId">
        <property name="ProductId" ><column name="TriggerProductId" /></property>
        <property name="LocatorId" ><column name="TriggerLocatorId" /></property>
        <property name="AttributeSetInstanceId" ><column name="TriggerAttributeSetInstanceId" /></property>
    </component>
    <component name="Output" class="Dddml.Wms.Domain.InventoryItem.InventoryItemId">
        <property name="ProductId" ><column name="OutputProductId" /></property>
        <property name="LocatorId" ><column name="OutputLocatorId" /></property>
        <property name="AttributeSetInstanceId" ><column name="OutputAttributeSetInstanceId" /></property>
    </component>
    <property name="AccountName" ></property>
    <property name="IsOutputNegated" ></property>
    <property name="Active" ></property>

    <property name="CreatedBy" column="CreatedBy"/>

    <property name="CreatedAt" column="CreatedAt" />
    <property name="CommandId" column="CommandId"/>
    <subclass name="InventoryPostingRuleStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="InventoryPostingRuleStateMergePatched"  discriminator-value="MergePatched">


        <property name="IsPropertyTriggerRemoved" column="IsPropertyTriggerRemoved"/>

        <property name="IsPropertyOutputRemoved" column="IsPropertyOutputRemoved"/>

        <property name="IsPropertyAccountNameRemoved" column="IsPropertyAccountNameRemoved"/>

        <property name="IsPropertyIsOutputNegatedRemoved" column="IsPropertyIsOutputNegatedRemoved"/>

        <property name="IsPropertyActiveRemoved" column="IsPropertyActiveRemoved"/>
    </subclass>

    <subclass name="InventoryPostingRuleStateDeleted"  discriminator-value="Deleted">

    </subclass>



  </class>
  
</hibernate-mapping>
