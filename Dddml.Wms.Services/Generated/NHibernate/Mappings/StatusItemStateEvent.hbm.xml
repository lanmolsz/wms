<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   assembly="Dddml.Wms.Common" 
                   namespace="Dddml.Wms.Domain.StatusItem">
  
  <class name="StatusItemStateEventBase" table="StatusItemStateEvents" mutable="false" abstract="true">

    <composite-id name="StateEventId" class="Dddml.Wms.Domain.StatusItem.StatusItemStateEventId">
        <key-property name="StatusId" ><column name="StatusId" sql-type="VARCHAR(20)" /></key-property>
        <key-property name="Version" ></key-property>
    </composite-id>
    <discriminator column="StateEventType" type="String" />

    <property name="StatusTypeId" ><column name="StatusTypeId" sql-type="VARCHAR(20)" /></property>
    <property name="StatusCode" ><column name="StatusCode" sql-type="VARCHAR(60)" /></property>
    <property name="SequenceId" ><column name="SequenceId" sql-type="VARCHAR(20)" /></property>
    <property name="Description" ><column name="Description" sql-type="VARCHAR(255)" /></property>
    <property name="Active" ></property>

    <property name="CreatedBy" column="CreatedBy"/>

    <property name="CreatedAt" column="CreatedAt" />
    <property name="CommandId" column="CommandId"/>
    <subclass name="StatusItemStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="StatusItemStateMergePatched"  discriminator-value="MergePatched">


        <property name="IsPropertyStatusTypeIdRemoved" column="IsPropertyStatusTypeIdRemoved"/>

        <property name="IsPropertyStatusCodeRemoved" column="IsPropertyStatusCodeRemoved"/>

        <property name="IsPropertySequenceIdRemoved" column="IsPropertySequenceIdRemoved"/>

        <property name="IsPropertyDescriptionRemoved" column="IsPropertyDescriptionRemoved"/>

        <property name="IsPropertyActiveRemoved" column="IsPropertyActiveRemoved"/>
    </subclass>


  </class>
  
</hibernate-mapping>
