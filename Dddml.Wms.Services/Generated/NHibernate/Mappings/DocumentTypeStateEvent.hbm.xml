<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   assembly="Dddml.Wms.Common" 
                   namespace="Dddml.Wms.Domain.DocumentType">
  
  <class name="DocumentTypeStateEventBase" table="DocumentTypeStateEvents" mutable="false" abstract="true">

    <composite-id name="StateEventId" class="Dddml.Wms.Domain.DocumentType.DocumentTypeStateEventId">
        <key-property name="DocumentTypeId" ><column name="DocumentTypeId" length="50" /></key-property>
        <key-property name="Version" ></key-property>
    </composite-id>
    <discriminator column="StateEventType" type="String" />

    <property name="Description" ></property>
    <property name="Active" ></property>

    <property name="CreatedBy" column="CreatedBy"/>

    <property name="CreatedAt" column="CreatedAt" />
    <property name="CommandId" column="CommandId"/>
    <subclass name="DocumentTypeStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="DocumentTypeStateMergePatched"  discriminator-value="MergePatched">


        <property name="IsPropertyDescriptionRemoved" column="IsPropertyDescriptionRemoved"/>

        <property name="IsPropertyActiveRemoved" column="IsPropertyActiveRemoved"/>
    </subclass>

    <subclass name="DocumentTypeStateDeleted"  discriminator-value="Deleted">

    </subclass>



  </class>
  
</hibernate-mapping>
