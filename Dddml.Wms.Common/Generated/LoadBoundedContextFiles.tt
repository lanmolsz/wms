	private void ReplacePropertyTypesWithBaseTypes(BoundedContext boundedContext)
	{
		boundedContext.SetValueObjectBaseTypes(GetValueObjectBaseTypes());
		boundedContext.ReplacePropertyTypesWithBaseTypes();	
	}

	private IDictionary<string, string> GetValueObjectBaseTypes()
	{
		var baseTypes = new Dictionary<string, string>();
		baseTypes.Add("Email", "string");
		return baseTypes;
	}

