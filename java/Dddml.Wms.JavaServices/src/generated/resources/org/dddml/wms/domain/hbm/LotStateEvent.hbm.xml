<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.wms.domain.lot">
  
  <class name="AbstractLotStateEvent" table="LotStateEvents" mutable="false" abstract="true">

	<composite-id name="stateEventId" class="org.dddml.wms.domain.lot.LotEventId">
		<key-property name="lotId" ><column name="LotId" sql-type="VARCHAR(20)" /></key-property>
		<key-property name="version" ></key-property>
	</composite-id>

    <discriminator column="StateEventType" type="string" />

	<property name="quantity" ><column name="Quantity" sql-type="DECIMAL(18,6)" /></property>
	<property name="expirationDate" ><column name="ExpirationDate" sql-type="DATETIME" /></property>
	<property name="active" ></property>

    <property name="createdBy" column="CreatedBy"/>

    <property name="createdAt" column="CreatedAt" />

    <property name="commandId" column="CommandId"/>

    <subclass name="AbstractLotStateEvent$SimpleLotStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="AbstractLotStateEvent$SimpleLotStateMergePatched" discriminator-value="MergePatched">

        <property name="isPropertyQuantityRemoved" column="IsPropertyQuantityRemoved"/>

        <property name="isPropertyExpirationDateRemoved" column="IsPropertyExpirationDateRemoved"/>

        <property name="isPropertyActiveRemoved" column="IsPropertyActiveRemoved"/>


    </subclass>

    <subclass name="AbstractLotStateEvent$SimpleLotStateDeleted" discriminator-value="Deleted">

    </subclass>



  </class>
  
</hibernate-mapping>
