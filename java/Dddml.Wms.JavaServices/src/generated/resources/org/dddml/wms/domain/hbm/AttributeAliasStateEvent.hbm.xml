<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.wms.domain.attribute">
  
  <class name="AbstractAttributeAliasStateEvent" table="AttributeAliasStateEvents" mutable="false" abstract="true">

	<composite-id name="stateEventId" class="org.dddml.wms.domain.attribute.AttributeAliasEventId">
		<key-property name="attributeId" ><column name="AttributeAliasIdAttributeId" length="50" /></key-property>
		<key-property name="code" ><column name="AttributeAliasIdCode" length="50" /></key-property>
		<key-property name="attributeVersion" ></key-property>
	</composite-id>

    <discriminator column="StateEventType" type="string" />

	<property name="name" ><column name="Name" unique-key="UniqueAttributeAliasName" /></property>
	<property name="active" ></property>

    <property name="createdBy" column="CreatedBy"/>

    <property name="createdAt" column="CreatedAt" />

    <property name="commandId" column="CommandId"/>

    <property name="version" column="Version" not-null="true" />

    <subclass name="AbstractAttributeAliasStateEvent$SimpleAttributeAliasStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="AbstractAttributeAliasStateEvent$SimpleAttributeAliasStateMergePatched" discriminator-value="MergePatched">

        <property name="isPropertyNameRemoved" column="IsPropertyNameRemoved"/>

        <property name="isPropertyActiveRemoved" column="IsPropertyActiveRemoved"/>


    </subclass>

    <subclass name="AbstractAttributeAliasStateEvent$SimpleAttributeAliasStateRemoved" discriminator-value="Removed">

    </subclass>



  </class>
  
</hibernate-mapping>
