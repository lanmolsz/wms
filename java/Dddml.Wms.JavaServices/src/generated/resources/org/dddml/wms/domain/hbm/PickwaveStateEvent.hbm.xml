<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.wms.domain.pickwave">
  
  <class name="AbstractPickwaveStateEvent" table="PickwaveStateEvents" mutable="false" abstract="true">

	<composite-id name="pickwaveEventId" class="org.dddml.wms.domain.pickwave.PickwaveEventId">
		<key-property name="pickwaveId" ><column name="PickwaveId" sql-type="DECIMAL(20,0)" /></key-property>
		<key-property name="version" ></key-property>
	</composite-id>

    <discriminator column="StateEventType" type="string" />

	<property name="statusId" ><column name="StatusId" sql-type="VARCHAR(20)" /></property>
	<property name="description" ><column name="Description" sql-type="VARCHAR(255)" /></property>
	<property name="active" ></property>

    <property name="createdBy" column="CreatedBy"/>

    <property name="createdAt" column="CreatedAt" />

    <property name="commandId" column="CommandId"/>

    <subclass name="AbstractPickwaveStateEvent$SimplePickwaveStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="AbstractPickwaveStateEvent$SimplePickwaveStateMergePatched" discriminator-value="MergePatched">

        <property name="isPropertyStatusIdRemoved" column="IsPropertyStatusIdRemoved"/>

        <property name="isPropertyDescriptionRemoved" column="IsPropertyDescriptionRemoved"/>

        <property name="isPropertyActiveRemoved" column="IsPropertyActiveRemoved"/>


    </subclass>

    <subclass name="AbstractPickwaveStateEvent$SimplePickwaveStateDeleted" discriminator-value="Deleted">

    </subclass>



  </class>
  
</hibernate-mapping>
