<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.wms.domain.partyrole">
  
  <class name="AbstractPartyRoleStateEvent" table="PartyRoleStateEvents" mutable="false" abstract="true">

	<composite-id name="partyRoleEventId" class="org.dddml.wms.domain.partyrole.PartyRoleEventId">
		<key-property name="partyRoleIdPartyId" ><column name="PartyRoleIdPartyId" sql-type="VARCHAR(20)" /></key-property>
		<key-property name="partyRoleIdRoleTypeId" ><column name="PartyRoleIdRoleTypeId" sql-type="VARCHAR(20)" /></key-property>
		<key-property name="version" ></key-property>
	</composite-id>

    <discriminator column="StateEventType" type="string" />

	<property name="active" ></property>

    <property name="createdBy" column="CreatedBy"/>

    <property name="createdAt" column="CreatedAt" />

    <property name="commandId" column="CommandId"/>

    <subclass name="AbstractPartyRoleStateEvent$SimplePartyRoleStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="AbstractPartyRoleStateEvent$SimplePartyRoleStateMergePatched" discriminator-value="MergePatched">

        <property name="isPropertyActiveRemoved" column="IsPropertyActiveRemoved"/>


    </subclass>

    <subclass name="AbstractPartyRoleStateEvent$SimplePartyRoleStateDeleted" discriminator-value="Deleted">

    </subclass>



  </class>
  
</hibernate-mapping>
