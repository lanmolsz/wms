<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.wms.domain.roletype">
  
  <class name="AbstractRoleTypeEvent" table="RoleTypeEvents" mutable="false" abstract="true">

	<composite-id name="roleTypeEventId" class="org.dddml.wms.domain.roletype.RoleTypeEventId">
		<key-property name="roleTypeId" ><column name="RoleTypeId" sql-type="VARCHAR(20)" /></key-property>
		<key-property name="version" ></key-property>
	</composite-id>

    <discriminator column="EventType" type="string" />

	<property name="parentTypeId" ><column name="ParentTypeId" sql-type="VARCHAR(20)" /></property>
	<property name="hasTable" ><column name="HasTable" sql-type="CHAR(1)" /></property>
	<property name="description" ><column name="Description" sql-type="VARCHAR(255)" /></property>
	<property name="active" ></property>

    <property name="createdBy" column="CreatedBy"/>

    <property name="createdAt" column="CreatedAt" />

    <property name="commandId" column="CommandId"/>

    <subclass name="AbstractRoleTypeEvent$SimpleRoleTypeStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="AbstractRoleTypeEvent$SimpleRoleTypeStateMergePatched" discriminator-value="MergePatched">

        <property name="isPropertyParentTypeIdRemoved" column="IsPropertyParentTypeIdRemoved"/>

        <property name="isPropertyHasTableRemoved" column="IsPropertyHasTableRemoved"/>

        <property name="isPropertyDescriptionRemoved" column="IsPropertyDescriptionRemoved"/>

        <property name="isPropertyActiveRemoved" column="IsPropertyActiveRemoved"/>


    </subclass>

    <subclass name="AbstractRoleTypeEvent$SimpleRoleTypeStateDeleted" discriminator-value="Deleted">

    </subclass>



  </class>
  
</hibernate-mapping>
