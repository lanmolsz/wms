<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.wms.domain.physicalinventory">
  
  <class name="AbstractPhysicalInventoryLineStateEvent" table="PhysicalInventoryLineStateEvents" mutable="false" abstract="true">

	<composite-id name="stateEventId" class="org.dddml.wms.domain.physicalinventory.PhysicalInventoryLineStateEventId">
		<key-property name="physicalInventoryDocumentNumber" ><column name="PhysicalInventoryLineIdPhysicalInventoryDocumentNumber" length="50" /></key-property>
		<key-property name="lineNumber" ><column name="PhysicalInventoryLineIdLineNumber" length="50" /></key-property>
		<key-property name="physicalInventoryVersion" ></key-property>
	</composite-id>

    <discriminator column="StateEventType" type="string" />

	<property name="locatorId" ></property>
	<property name="productId" ><column name="ProductId" sql-type="VARCHAR(60)" /></property>
	<property name="attributeSetInstanceId" ></property>
	<property name="bookQuantity" ></property>
	<property name="countedQuantity" ></property>
	<property name="processed" ></property>
	<property name="reversalLineNumber" ></property>
	<property name="description" ></property>
	<property name="active" ></property>

    <property name="createdBy" column="CreatedBy"/>

    <property name="createdAt" column="CreatedAt" />

    <property name="commandId" column="CommandId"/>

    <property name="version" column="Version" not-null="true" />

    <subclass name="AbstractPhysicalInventoryLineStateEvent$SimplePhysicalInventoryLineStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="AbstractPhysicalInventoryLineStateEvent$SimplePhysicalInventoryLineStateMergePatched" discriminator-value="MergePatched">

        <property name="isPropertyLocatorIdRemoved" column="IsPropertyLocatorIdRemoved"/>

        <property name="isPropertyProductIdRemoved" column="IsPropertyProductIdRemoved"/>

        <property name="isPropertyAttributeSetInstanceIdRemoved" column="IsPropertyAttributeSetInstanceIdRemoved"/>

        <property name="isPropertyBookQuantityRemoved" column="IsPropertyBookQuantityRemoved"/>

        <property name="isPropertyCountedQuantityRemoved" column="IsPropertyCountedQuantityRemoved"/>

        <property name="isPropertyProcessedRemoved" column="IsPropertyProcessedRemoved"/>

        <property name="isPropertyReversalLineNumberRemoved" column="IsPropertyReversalLineNumberRemoved"/>

        <property name="isPropertyDescriptionRemoved" column="IsPropertyDescriptionRemoved"/>

        <property name="isPropertyActiveRemoved" column="IsPropertyActiveRemoved"/>


    </subclass>

    <subclass name="AbstractPhysicalInventoryLineStateEvent$SimplePhysicalInventoryLineStateRemoved" discriminator-value="Removed">

    </subclass>



  </class>
  
</hibernate-mapping>
