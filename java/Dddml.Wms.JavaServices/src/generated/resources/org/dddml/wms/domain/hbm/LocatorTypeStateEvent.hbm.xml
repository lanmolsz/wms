<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.wms.domain.locatortype">
  
  <class name="AbstractLocatorTypeStateEvent" table="LocatorTypeStateEvents" mutable="false" abstract="true">

	<composite-id name="locatorTypeEventId" class="org.dddml.wms.domain.locatortype.LocatorTypeEventId">
		<key-property name="locatorTypeId" ><column name="LocatorTypeId" length="50" /></key-property>
		<key-property name="version" ></key-property>
	</composite-id>

    <discriminator column="StateEventType" type="string" />

	<property name="description" ></property>
	<property name="active" ></property>

    <property name="createdBy" column="CreatedBy"/>

    <property name="createdAt" column="CreatedAt" />

    <property name="commandId" column="CommandId"/>

    <subclass name="AbstractLocatorTypeStateEvent$SimpleLocatorTypeStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="AbstractLocatorTypeStateEvent$SimpleLocatorTypeStateMergePatched" discriminator-value="MergePatched">

        <property name="isPropertyDescriptionRemoved" column="IsPropertyDescriptionRemoved"/>

        <property name="isPropertyActiveRemoved" column="IsPropertyActiveRemoved"/>


    </subclass>

    <subclass name="AbstractLocatorTypeStateEvent$SimpleLocatorTypeStateDeleted" discriminator-value="Deleted">

    </subclass>



  </class>
  
</hibernate-mapping>
