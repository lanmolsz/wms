<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="organizationTreeOrganizationStructureStateRepository" class="org.dddml.wms.domain.hibernate.HibernateOrganizationTreeOrganizationStructureStateRepository">
    <property name="sessionFactory" ref="hibernateSessionFactory"/>
  </bean>

  <bean id="organizationTreeRepository" class="org.dddml.wms.domain.hibernate.HibernateOrganizationTreeRepository">
    <property name="organizationStateRepository" ref="organizationStateRepository"/>
    <property name="organizationStructureStateRepository" ref="organizationTreeOrganizationStructureStateRepository"/>
  </bean>

  <bean id="locatorTreeLocatorStateRepository" class="org.dddml.wms.domain.hibernate.HibernateLocatorTreeLocatorStateRepository">
    <property name="sessionFactory" ref="hibernateSessionFactory"/>
  </bean>

  <bean id="locatorTreeRepository" class="org.dddml.wms.domain.hibernate.HibernateLocatorTreeRepository">
    <property name="locatorStateRepository" ref="locatorTreeLocatorStateRepository"/>
  </bean>

</beans>

