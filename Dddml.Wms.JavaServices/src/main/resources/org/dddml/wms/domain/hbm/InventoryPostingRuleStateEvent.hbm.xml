<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.wms.domain.inventorypostingrule">
  
  <class name="AbstractInventoryPostingRuleStateEvent" table="InventoryPostingRuleStateEvents" mutable="false" abstract="true">

	<composite-id name="stateEventId" class="org.dddml.wms.domain.inventorypostingrule.InventoryPostingRuleStateEventId">
		<key-property name="inventoryPostingRuleId" ><column name="InventoryPostingRuleId" length="50" /></key-property>
		<key-property name="version" ></key-property>
	</composite-id>

    <discriminator column="StateEventType" type="string" />

	<component name="trigger" class="org.dddml.wms.domain.inventoryitem.InventoryItemId">
		<property name="productId" ><column name="triggerProductId" /></property>
		<property name="locatorId" ><column name="triggerLocatorId" /></property>
		<property name="attributeSetInstanceId" ><column name="triggerAttributeSetInstanceId" /></property>
	</component>
	<component name="output" class="org.dddml.wms.domain.inventoryitem.InventoryItemId">
		<property name="productId" ><column name="outputProductId" /></property>
		<property name="locatorId" ><column name="outputLocatorId" /></property>
		<property name="attributeSetInstanceId" ><column name="outputAttributeSetInstanceId" /></property>
	</component>
	<property name="active" ></property>

    <property name="createdBy" column="CreatedBy"/>

    <property name="createdAt" column="CreatedAt" />

    <property name="commandId" column="CommandId"/>

    <subclass name="AbstractInventoryPostingRuleStateEvent$SimpleInventoryPostingRuleStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="AbstractInventoryPostingRuleStateEvent$SimpleInventoryPostingRuleStateMergePatched" discriminator-value="MergePatched">

        <property name="isPropertyTriggerRemoved" column="IsPropertyTriggerRemoved"/>

        <property name="isPropertyOutputRemoved" column="IsPropertyOutputRemoved"/>

        <property name="isPropertyActiveRemoved" column="IsPropertyActiveRemoved"/>


    </subclass>

    <subclass name="AbstractInventoryPostingRuleStateEvent$SimpleInventoryPostingRuleStateDeleted" discriminator-value="Deleted">

    </subclass>



  </class>
  
</hibernate-mapping>
