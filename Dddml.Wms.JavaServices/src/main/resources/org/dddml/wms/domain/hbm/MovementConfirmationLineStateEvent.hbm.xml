<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.wms.domain.movement">
  
  <class name="AbstractMovementConfirmationLineStateEvent" table="MovementConfirmationLineStateEvents" mutable="false" abstract="true">

	<composite-id name="stateEventId" class="org.dddml.wms.domain.movement.MovementConfirmationLineStateEventId">
		<key-property name="movementDocumentNumber" ><column name="MovementConfirmationLineIdMovementDocumentNumber" length="50" /></key-property>
		<key-property name="lineNumber" ><column name="MovementConfirmationLineIdLineNumber" length="50" /></key-property>
		<key-property name="movementVersion" ></key-property>
	</composite-id>

    <discriminator column="StateEventType" type="string" />

	<property name="targetQuantity" ></property>
	<property name="confirmedQuantity" ></property>
	<property name="differenceQuantity" ></property>
	<property name="scrappedQuantity" ></property>
	<property name="active" ></property>

    <property name="createdBy" column="CreatedBy"/>

    <property name="createdAt" column="CreatedAt" />

    <property name="commandId" column="CommandId"/>

    <property name="version" column="Version" not-null="true" />

    <subclass name="AbstractMovementConfirmationLineStateEvent$SimpleMovementConfirmationLineStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="AbstractMovementConfirmationLineStateEvent$SimpleMovementConfirmationLineStateMergePatched" discriminator-value="MergePatched">

        <property name="isPropertyTargetQuantityRemoved" column="IsPropertyTargetQuantityRemoved"/>

        <property name="isPropertyConfirmedQuantityRemoved" column="IsPropertyConfirmedQuantityRemoved"/>

        <property name="isPropertyDifferenceQuantityRemoved" column="IsPropertyDifferenceQuantityRemoved"/>

        <property name="isPropertyScrappedQuantityRemoved" column="IsPropertyScrappedQuantityRemoved"/>

        <property name="isPropertyActiveRemoved" column="IsPropertyActiveRemoved"/>


    </subclass>

    <subclass name="AbstractMovementConfirmationLineStateEvent$SimpleMovementConfirmationLineStateRemoved" discriminator-value="Removed">

    </subclass>



  </class>
  
</hibernate-mapping>
