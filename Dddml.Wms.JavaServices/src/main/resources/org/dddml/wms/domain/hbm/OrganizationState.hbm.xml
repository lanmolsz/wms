<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.wms.domain.organization">
  
  <class name="org.dddml.wms.domain.organization.AbstractOrganizationState$SimpleOrganizationState" table="Organizations">

	<id name="organizationId" length="50" column="OrganizationId"><generator class="assigned"/></id>
	<version name="version" column="Version" type="long" />

	<property name="name" ></property>
	<property name="description" ></property>
	<property name="type" ></property>
	<property name="isSummary" ></property>
	<property name="createdBy" ></property>
	<property name="updatedBy" ></property>
	<property name="active" ></property>
	<property name="deleted" ></property>

    <property name="createdAt" column="CreatedAt" />

    <property name="updatedAt" column="UpdatedAt" />


  </class>
  
</hibernate-mapping>

