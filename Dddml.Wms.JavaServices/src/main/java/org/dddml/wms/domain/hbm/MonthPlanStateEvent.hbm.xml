<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.wms.domain">
  
  <class name="AbstractMonthPlanStateEvent" table="MonthPlanStateEvents" mutable="false" abstract="true">

	<composite-id name="stateEventId" class="org.dddml.wms.domain.MonthPlanStateEventId">
		<key-property name="personalNameFirstName" column="MonthPlanIdPersonalNameFirstName" length="50"/>
		<key-property name="personalNameLastName" column="MonthPlanIdPersonalNameLastName" length="50"/>
		<key-property name="year" column="MonthPlanIdYear" />
		<key-property name="month" column="MonthPlanIdMonth" />
		<key-property name="personVersion" column="PersonVersion" />
	</composite-id>

    <discriminator column="StateEventType" type="string" />

	<property name="description" length="500"></property>

	<property name="active" ></property>


    <property name="createdBy" />

    <property name="createdAt" />

    <property name="commandId" />

    <property name="version" not-null="true" />


    <subclass name="AbstractMonthPlanStateEvent$SimpleMonthPlanStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="AbstractMonthPlanStateEvent$SimpleMonthPlanStateMergePatched"  discriminator-value="MergePatched">

        <property name="isPropertyDescriptionRemoved" />

        <property name="isPropertyActiveRemoved" />


    </subclass>

    <subclass name="AbstractMonthPlanStateEvent$SimpleMonthPlanStateRemoved"  discriminator-value="Removed">

    </subclass>

  </class>
  
</hibernate-mapping>
