<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.wms.domain">
  
  <class name="AbstractDayPlanStateEvent" table="DayPlanStateEvents" mutable="false" abstract="true">

	<composite-id name="stateEventId" class="org.dddml.wms.domain.DayPlanStateEventId">
		<key-property name="personalNameFirstName" column="DayPlanIdPersonalNameFirstName" length="50"/>
		<key-property name="personalNameLastName" column="DayPlanIdPersonalNameLastName" length="50"/>
		<key-property name="year" column="DayPlanIdYear" />
		<key-property name="month" column="DayPlanIdMonth" />
		<key-property name="day" column="DayPlanIdDay" />
		<key-property name="personVersion" column="PersonVersion" />
	</composite-id>

    <discriminator column="StateEventType" type="string" />

	<property name="description" length="500"></property>

	<property name="active" ></property>


    <property name="createdBy" />

    <property name="createdAt" />

    <property name="commandId" />

    <property name="version" not-null="true" />


    <subclass name="AbstractDayPlanStateEvent$SimpleDayPlanStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="AbstractDayPlanStateEvent$SimpleDayPlanStateMergePatched"  discriminator-value="MergePatched">

        <property name="isPropertyDescriptionRemoved" />

        <property name="isPropertyActiveRemoved" />


    </subclass>

    <subclass name="AbstractDayPlanStateEvent$SimpleDayPlanStateRemoved"  discriminator-value="Removed">

    </subclass>

  </class>
  
</hibernate-mapping>
