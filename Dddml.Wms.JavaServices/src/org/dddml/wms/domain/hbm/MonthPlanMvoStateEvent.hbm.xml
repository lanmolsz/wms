<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.wms.domain">
  
  <class name="AbstractMonthPlanMvoStateEvent" table="MonthPlanMvoStateEvents" mutable="false" abstract="true">

	<composite-id name="stateEventId" class="org.dddml.wms.domain.MonthPlanMvoStateEventId">
		<key-property name="monthPlanIdPersonalNameFirstName" column="MonthPlanIdPersonalNameFirstName" length="50"/>
		<key-property name="monthPlanIdPersonalNameLastName" column="MonthPlanIdPersonalNameLastName" length="50"/>
		<key-property name="monthPlanIdYear" column="MonthPlanIdYear" />
		<key-property name="monthPlanIdMonth" column="MonthPlanIdMonth" />
		<key-property name="personVersion" column="PersonVersion" />
	</composite-id>

    <discriminator column="StateEventType" type="string" />

	<property name="description" length="500"></property>

	<property name="version" ></property>

	<property name="active" ></property>

	<property name="yearPlanDescription" length="500"></property>

	<property name="yearPlanCreatedBy" ></property>

	<property name="yearPlanUpdatedBy" ></property>

	<property name="yearPlanVersion" ></property>

	<property name="yearPlanCreatedAt" ></property>

	<property name="yearPlanUpdatedAt" ></property>

	<property name="yearPlanActive" ></property>

	<property name="yearPlanDeleted" ></property>

	<property name="personBirthDate" ></property>

	<component name="personLoves" class="org.dddml.wms.domain.PersonalName">
		<property name="firstName" column="personLovesFirstName" length="50"/>
		<property name="lastName" column="personLovesLastName" length="50"/>
	</component>

	<component name="personEmergencyContact" class="org.dddml.wms.domain.Contact">
		<property name="personalNameFirstName" column="personEmergencyContactPersonalNameFirstName" length="50"/>
		<property name="personalNameLastName" column="personEmergencyContactPersonalNameLastName" length="50"/>
		<property name="phoneNumber" column="personEmergencyContactPhoneNumber" />
		<property name="address" column="personEmergencyContactAddress" />
	</component>

	<property name="personCreatedBy" ></property>

	<property name="personUpdatedBy" ></property>

	<property name="personCreatedAt" ></property>

	<property name="personUpdatedAt" ></property>

	<property name="personActive" ></property>

	<property name="personDeleted" ></property>


    <property name="createdBy" />

    <property name="createdAt" />

    <property name="commandId" />


    <subclass name="AbstractMonthPlanMvoStateEvent$SimpleMonthPlanMvoStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="AbstractMonthPlanMvoStateEvent$SimpleMonthPlanMvoStateMergePatched"  discriminator-value="MergePatched">

        <property name="isPropertyDescriptionRemoved" />

        <property name="isPropertyVersionRemoved" />

        <property name="isPropertyActiveRemoved" />

        <property name="isPropertyYearPlanDescriptionRemoved" />

        <property name="isPropertyYearPlanCreatedByRemoved" />

        <property name="isPropertyYearPlanUpdatedByRemoved" />

        <property name="isPropertyYearPlanVersionRemoved" />

        <property name="isPropertyYearPlanCreatedAtRemoved" />

        <property name="isPropertyYearPlanUpdatedAtRemoved" />

        <property name="isPropertyYearPlanActiveRemoved" />

        <property name="isPropertyYearPlanDeletedRemoved" />

        <property name="isPropertyPersonBirthDateRemoved" />

        <property name="isPropertyPersonLovesRemoved" />

        <property name="isPropertyPersonEmergencyContactRemoved" />

        <property name="isPropertyPersonCreatedByRemoved" />

        <property name="isPropertyPersonUpdatedByRemoved" />

        <property name="isPropertyPersonCreatedAtRemoved" />

        <property name="isPropertyPersonUpdatedAtRemoved" />

        <property name="isPropertyPersonActiveRemoved" />

        <property name="isPropertyPersonDeletedRemoved" />


    </subclass>

    <subclass name="AbstractMonthPlanMvoStateEvent$SimpleMonthPlanMvoStateDeleted"  discriminator-value="Deleted">

    </subclass>

  </class>
  
</hibernate-mapping>
