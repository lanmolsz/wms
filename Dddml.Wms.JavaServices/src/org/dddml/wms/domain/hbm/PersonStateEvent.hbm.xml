<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.wms.domain">
  
  <class name="AbstractPersonStateEvent" table="PersonStateEvents" mutable="false" abstract="true">

	<composite-id name="stateEventId" class="org.dddml.wms.domain.PersonStateEventId">
		<key-property name="personalNameFirstName" column="PersonalNameFirstName" length="50"/>
		<key-property name="personalNameLastName" column="PersonalNameLastName" length="50"/>
		<key-property name="version" column="Version" />
	</composite-id>

    <discriminator column="StateEventType" type="string" />

	<property name="birthDate" ></property>

	<component name="loves" class="org.dddml.wms.domain.PersonalName">
		<property name="firstName" column="lovesFirstName" length="50"/>
		<property name="lastName" column="lovesLastName" length="50"/>
	</component>

	<property name="active" ></property>


    <property name="createdBy" />

    <property name="createdAt" />

    <property name="commandId" />


    <subclass name="AbstractPersonStateEvent$SimplePersonStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="AbstractPersonStateEvent$SimplePersonStateMergePatched"  discriminator-value="MergePatched">

        <property name="isPropertyBirthDateRemoved" />

        <property name="isPropertyLovesRemoved" />

        <property name="isPropertyActiveRemoved" />


    </subclass>

    <subclass name="AbstractPersonStateEvent$SimplePersonStateDeleted"  discriminator-value="Deleted">

    </subclass>

  </class>
  
</hibernate-mapping>
